{
  "variables": {
    "do_api_token": "{{env `TF_VAR_DIGITALOCEAN_TOKEN`}}"
  },

  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{ user `do_api_token` }}",
      "ssh_username": "root",
      "size":"c-4",
      "image": "ubuntu-19-10-x64",
      "region": "lon1",
      "snapshot_name": "Ubuntu-Gmod"
    }],
    "provisioners": [
      {
        "type": "ansible",
        "extra_arguments": [ "-vv" ],
        "host_alias" : "PackerGmod-TTT",
        "playbook_file": "../../Ansible/Packer-Gmod.yml"
      }
    ]
}
